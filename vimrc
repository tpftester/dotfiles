set nocompatible
set smartindent
set tabstop=2
set shiftwidth=2
set softtabstop=2
set showmatch
set ruler
set incsearch

set backspace=indent,eol,start
set mouse=a
set whichwrap=b,s,h,l,<,>,~,[,]
set wildmenu
set showcmd
set expandtab
set formatoptions=rq
set ignorecase
set smartcase
set number

